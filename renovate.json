{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "default:automergeDigest"
  ],
  "prHourlyLimit": 0,
  "dockerfile": {
    "automerge": true,
    "autoApprove": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "mkdocs-material"
      ],
      "automerge": true
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
